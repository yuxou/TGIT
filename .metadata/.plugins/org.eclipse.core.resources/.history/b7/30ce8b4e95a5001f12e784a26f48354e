package model.dao;

import java.sql.*;
import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;
import model.domain.Place;
import model.domain.Weather;

public class PlaceDAO {

    // 장소 추가
    public void addPlace(Place place) {
        String sql = "INSERT INTO places (placeId, name, location, memo) VALUES (?, ?, ?, ?)";
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setInt(1, place.getPlaceId());
            pstmt.setString(2, place.getName());
            pstmt.setString(3, place.getLocation());
            pstmt.setString(4, place.getMemo());
            pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    // 모든 장소 조회
    public List<Place> getAllPlaces() {
        String sql = "SELECT * FROM places";
        List<Place> places = new ArrayList<>();
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql);
             ResultSet rs = pstmt.executeQuery()) {
            while (rs.next()) {
                Place place = new Place(
                    rs.getInt("placeId"),
                    rs.getString("name"),
                    rs.getString("location"),
                    rs.getString("memo")
                );
                places.add(place);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return places;
    }

    // 장소 메모 추가
    public void addPlaceMemo(int placeId, String memo) {
        String sql = "UPDATE places SET memo = ? WHERE placeId = ?";
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setString(1, memo);
            pstmt.setInt(2, placeId);
            pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    // 장소 메모 수정
    public void editPlaceMemo(int placeId, String newMemo) {
        String sql = "UPDATE places SET memo = ? WHERE placeId = ?";
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setString(1, newMemo);
            pstmt.setInt(2, placeId);
            pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    // 장소 메모 삭제
    public void deletePlaceMemo(int placeId) {
        String sql = "UPDATE places SET memo = NULL WHERE placeId = ?";
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setInt(1, placeId);
            pstmt.executeUpdate();
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }

    // 날씨 정보 조회
    public Weather getWeatherInfo(int placeId) {
        String sql = "SELECT * FROM weather WHERE location = (SELECT location FROM places WHERE placeId = ?)";
        Weather weather = null;
        try (Connection conn = JDBCUtil.getConnection();
             PreparedStatement pstmt = conn.prepareStatement(sql)) {
            pstmt.setInt(1, placeId);
            ResultSet rs = pstmt.executeQuery();
            if (rs.next()) {
                weather = new Weather(
                    rs.getInt("weatherId"),
                    rs.getDouble("temperature"),
                    rs.getString("condition"),
                    rs.getString("updateTime"),
                    rs.getString("location")
                );
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return weather;
    }
    
    // 장소 검색 기능 추가
    public List<Place> searchPlaces(String keyword) {
        return getAllPlaces().stream()
                .filter(place -> place.getName().toLowerCase().contains(keyword.toLowerCase()))
                .collect(Collectors.toList());
    }
}