<mapper namespace="com.example.mapper.ReviewMapper">
    <select id="selectReviewById" parameterType="int" resultType="com.example.domain.Review">
        SELECT * FROM review WHERE id = #{id}
    </select>

    <insert id="insertReview" parameterType="com.example.domain.Review">
        INSERT INTO review (content, rating, plan_id)
        VALUES (#{content}, #{rating}, #{planId})
    </insert>

    <update id="updateReview" parameterType="com.example.domain.Review">
        UPDATE review
        SET content = #{content}, rating = #{rating}
        WHERE id = #{id}
    </update>

    <delete id="deleteReview" parameterType="int">
        DELETE FROM review WHERE id = #{id}
    </delete>
</mapper>
