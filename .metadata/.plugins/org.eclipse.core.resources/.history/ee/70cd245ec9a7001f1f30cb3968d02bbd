<mapper namespace="com.example.mapper.PlanMapper">
    <select id="selectPlanById" parameterType="int" resultType="com.example.domain.Plan">
        SELECT * FROM plan WHERE id = #{id}
    </select>

    <insert id="insertPlan" parameterType="com.example.domain.Plan">
        INSERT INTO plan (name, date, user_id)
        VALUES (#{name}, #{date}, #{userId})
    </insert>

    <update id="updatePlan" parameterType="com.example.domain.Plan">
        UPDATE plan
        SET name = #{name}, date = #{date}, user_id = #{userId}
        WHERE id = #{id}
    </update>

    <delete id="deletePlan" parameterType="int">
        DELETE FROM plan WHERE id = #{id}
    </delete>
</mapper>