<mapper namespace="com.example.mapper.ExpenseMapper">
    <select id="selectExpenseById" parameterType="int" resultType="com.example.domain.Expense">
        SELECT * FROM expense WHERE id = #{id}
    </select>

    <insert id="insertExpense" parameterType="com.example.domain.Expense">
        INSERT INTO expense (amount, description, date)
        VALUES (#{amount}, #{description}, #{date})
    </insert>

    <update id="updateExpense" parameterType="com.example.domain.Expense">
        UPDATE expense
        SET amount = #{amount}, description = #{description}, date = #{date}
        WHERE id = #{id}
    </update>

    <delete id="deleteExpense" parameterType="int">
        DELETE FROM expense WHERE id = #{id}
    </delete>
</mapper>
