<mapper namespace="com.example.mapper.ChecklistMapper">
    <!-- checklist 관련 SQL -->
    <select id="selectChecklistById" parameterType="int" resultType="com.example.domain.Checklist">
        SELECT * FROM checklist WHERE id = #{id}
    </select>

    <insert id="insertChecklist" parameterType="com.example.domain.Checklist">
        INSERT INTO checklist (name, description)
        VALUES (#{name}, #{description})
    </insert>

    <update id="updateChecklist" parameterType="com.example.domain.Checklist">
        UPDATE checklist
        SET name = #{name}, description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteChecklist" parameterType="int">
        DELETE FROM checklist WHERE id = #{id}
    </delete>

    <!-- checklistItem 관련 SQL -->
    <select id="selectItemsByChecklistId" parameterType="int" resultType="com.example.domain.ChecklistItem">
        SELECT * FROM checklist_item WHERE checklist_id = #{checklistId}
    </select>
</mapper>