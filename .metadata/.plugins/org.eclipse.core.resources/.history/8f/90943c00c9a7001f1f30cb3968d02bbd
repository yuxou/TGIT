<mapper namespace="com.example.mapper.PlaceMapper">
    <select id="selectPlaceById" parameterType="int" resultType="com.example.domain.Place">
        SELECT * FROM place WHERE id = #{id}
    </select>

    <insert id="insertPlace" parameterType="com.example.domain.Place">
        INSERT INTO place (name, location, description)
        VALUES (#{name}, #{location}, #{description})
    </insert>

    <update id="updatePlace" parameterType="com.example.domain.Place">
        UPDATE place
        SET name = #{name}, location = #{location}, description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deletePlace" parameterType="int">
        DELETE FROM place WHERE id = #{id}
    </delete>
</mapper>